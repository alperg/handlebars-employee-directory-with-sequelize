<nav class="navbar navbar-dark bg-primary">
  <a class="mr-auto navbar-brand white">Handlebars Employee Directory</a>
  <div class="form-inline">
    <button class="btn btn-secondary btnAdd" data-toggle="modal" data-type="add" data-target="#exampleModal">Add</button>
  </div>
</nav>

<main>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th></th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Department</th>
        <th>Start Date</th>
        <th>Days Worked</th>
        <th class="actions">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each employees}}
      <tr>
        <td>{{this.id}}</td>
        <td><img src="{{this.avatar}}"></td>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.department}}</td>
        <td>{{this.startDate}}</td>
        <td>{{this.daysWorked}} days</td>
        <td>
          <button data-id="{{id}}" class="btn btn-sm btn-danger btnDelete">X</button>
          <button data-id="{{id}}" data-type="update" class="btn btn-sm btn-success" data-toggle="modal" data-target="#exampleModal">U</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</main>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="firstName" class="col-form-label">First Name:</label>
            <input type="text" class="form-control" id="firstName">
          </div>
          <div class="form-group">
            <label for="lastName" class="col-form-label">Last Name:</label>
            <input type="text" class="form-control" id="lastName">
          </div>
          <div class="form-group">
            <label for="email" class="col-form-label">Email:</label>
            <input type="text" class="form-control" id="email">
          </div>
          <div class="form-group">
            <label for="gender" class="col-form-label">Gender:</label>
            <input type="text" class="form-control" id="gender">
          </div>
          <div class="form-group">
            <label for="department" class="col-form-label">Department:</label>
            <input type="text" class="form-control" id="department">
          </div>
          <div class="form-group">
            <label for="startDate" class="col-form-label">Start Date:</label>
            <input type="text" class="form-control" id="startDate">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary btnSubmit">Submit</button>
      </div>
    </div>
  </div>
</div>